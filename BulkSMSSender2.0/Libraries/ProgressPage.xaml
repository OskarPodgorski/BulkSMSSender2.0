<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BulkSMSSender2._0.ProgressPage"
             >

    <ScrollView>

        <VerticalStackLayout
            Padding="30"
            Spacing="30"
                HorizontalOptions="FillAndExpand">

            <HorizontalStackLayout 
                Spacing="25"
                HorizontalOptions="CenterAndExpand">

                <Label 
                    Text="Progress:" 
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="20"/>

                <Label 
    Text="0 / 0" 
    x:Name="progressNumbersLabel"
    VerticalOptions="FillAndExpand"
    HorizontalOptions="CenterAndExpand"
    FontSize="20"/>
                
                <Label 
                    Text="0 / 0" 
                    x:Name="progressMessagesLabel"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="20"/>

                <Label 
                    Text="0%" 
                    x:Name="progressPercentLabel"
                    VerticalOptions="FillAndExpand"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="20"/>

                <Button
                    Text="Resume"
                    HorizontalOptions="End"
                    BackgroundColor="{StaticResource MyGreen}"/>
                
                <Button
                    Text="Pause"
                    HorizontalOptions="End"
                    BackgroundColor="{StaticResource MyBlue}"/>

                <Button
                    Text="Abort"
                    HorizontalOptions="End"
                    BackgroundColor="{StaticResource MyRed}"/>

            </HorizontalStackLayout>

            <VerticalStackLayout
                x:Name="numbersLayout"
                Spacing="4"
                HorizontalOptions="FillAndExpand">

            </VerticalStackLayout>


        </VerticalStackLayout>

    </ScrollView>

</ContentPage>