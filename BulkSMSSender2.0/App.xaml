<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:BulkSMSSender2._0"
             x:Class="BulkSMSSender2._0.App">
    
    <Application.Resources>
        
        <ResourceDictionary>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Color x:Key="MyDarkGray">#FFFFFF</Color>
            <Color x:Key="MyGray">#FFFFFF</Color>
            <Color x:Key="MyViolet">#FFFFFF</Color>
            <Color x:Key="MyYellow">#FFFFFF</Color>
            <Color x:Key="MyBlue">#FFFFFF</Color>
            <Color x:Key="MyGreen">#FFFFFF</Color>
            <Color x:Key="MyRed">#FFFFFF</Color>

        </ResourceDictionary>
        
    </Application.Resources>
    
</Application>
